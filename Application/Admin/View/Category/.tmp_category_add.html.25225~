<script>
$(function(){
  //提交表单合法性验证 
    $("#addform").Validform({ 
    tiptype:function(msg,o,cssctl){ 
      if(!o.obj.is("form")){ 
          var objtip=o.obj.siblings(".Validform_checktip");
          cssctl(objtip,o.type);
          objtip.text(msg); 
      }
    },
	label:"label",
    ajaxPost:true,
    callback:function(data){
      if(data.status=="ok"){
          alert(data.info);
		  window.location.href = "{:U('admin/category/index')}";
      }else{
        alert(data.info);
      }
    }
  });
})
</script>
   
      </div>
    </div>
