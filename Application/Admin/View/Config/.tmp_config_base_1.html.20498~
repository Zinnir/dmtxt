<script>
    $(function(){
        var demo=$(".js_form").Validform({
            tiptype:function(msg,o,cssctl){
            if(!o.obj.is("form")){
              var objtip=o.obj.parent().siblings(".Validform_checktip");
              cssctl(objtip,o.type);
              objtip.text(msg);
           }
        },
            label:"label",
            ajaxPost:true,
            callback:function(data){
              if(data.status=="ok"){
                  alert(data.info);
                  location.reload();
              }else{
                alert(data.info);
              }
            }
        });
        



    });
</script>
