<script>
    $(function(){
		//禁用,恢复操作
		$(".js_update_status").click(function(){
			var Id = $(this).data('id');
			var IsSystem = $(this).data('is-system');
			var Url = "{:U('admin/config/update_status')}";
			if(IsSystem == 1){
				alert('系统字段不允许禁用');
				return false;
			}else{
				$.post(Url, { id:Id }, function(data){
					if(data.status == 'ok'){
						location.reload();
					}else{
						alert(data.info);
					}
				}, 'json').error(function(){
					alert('网络连接错误，请稍后重试');
				});
			}
		});
		
        //修改操作
        $(".js_edit").click(function(){
            var Id = $(this).data('id');
            var IsSystem = $(this).data('is-system');
			var Url = "{:U('admin/config/edit')}?id="+Id;
            if(IsSystem == 1){
                alert('系统字段不允许修改');
				return false;
            }else{
				window.location.href = Url;
			}
        });
		//ajax排序
		$(".js_sort").blur(function(){
			var id = $(this).data('id');
			var sort = $(this).val();
			var url = "{:U('admin/config/update_sort')}";
		    $.post(url, { id:id, sort:sort }, function(data){
                if(data.status == 'ok'){
                    location.reload();
                }else{
                    alert(data.info);
                }
            }, 'json').error(function(){
                alert('网络连接错误，请稍后重试');
            });
		});
        //删除操作
        $(".js_del").click(function(){
            var Id = $(this).data('id');
            var IsSystem = $(this).data('is-system');
			var Url = "{:U('admin/config/delete')}?id="+Id;
            if(IsSystem == 1){
                alert('系统字段不允许删除');
				return false;
            }else{
				var result = confirm("删除是不可恢复的,你确认要删除吗?");
			    if(!result){
			      return false;
			    }
				$.post(Url, { id:Id }, function(data){
                    if(data.status == 'ok'){
                        location.reload();
                    }else{
                        alert(data.info);
                    }
                }, 'json').error(function(){
                    alert('网络连接错误，请稍后重试');
                });
			}
        });		
    });
</script>
