<script>
	$(function(){
		$(".js_theme").click(function(){
			var theme = $(this).data('theme');
			var url = "{:U('admin/config/theme')}"; 
			$.post(url, { theme:theme }, function(data){
				if(data.status == 'ok'){
					location.reload();
                    //alert('模板切换成功');
                }else{
                    alert(data.info);
                }
			}, 'json');
		});
	});
</script>
