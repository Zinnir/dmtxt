<script>
    $(function(){
        $(".js_status").change(function(){
            var siteStatus = $("input[name='status']:checked").val();
            if(siteStatus == 0){
                $(".js_close_reason").removeClass("hidden").addClass("show");
            }else{
                $(".js_close_reason").removeClass("show").addClass("hidden");
            }
        });

    });
</script>
